{
  "manifest_version": 2,
  "name": "WaniKani Autocomplete",
  "version": "1.0",
  "description": "Adds tooltips to WaniKani elements.",
  "permissions": ["storage", "https://www.wanikani.com/*", "https://api.wanikani.com/*"],
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://www.wanikani.com/*"],
      "js": ["content.js"],
      "css": ["tooltip.css"]
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "wanikani-addon@example.com"
    }
  }
}
