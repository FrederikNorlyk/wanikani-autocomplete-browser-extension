{
  "manifest_version": 2,
  "name": "WaniKani Autocomplete",
  "version": "1.0",
  "description": "Adds tooltips to WaniKani elements.",
  "permissions": ["storage", "https://www.wanikani.com/*", "https://api.wanikani.com/*"],
  "background": {
    "scripts": ["src/background.js"]
  },
  "browser_action": {
    "default_popup": "src/popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://www.wanikani.com/*"],
      "js": ["src/content.js"],
      "css": ["src/tooltip.css"]
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "wanikani-autocomplete@frederiknorlyk.dev"
    }
  }
}
