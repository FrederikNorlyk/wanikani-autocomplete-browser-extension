{
  "manifest_version": 2,
  "name": "WaniKani Tooltip Helper",
  "version": "1.0",
  "description": "Adds tooltips to WaniKani elements.",
  "permissions": ["https://www.wanikani.com/"],
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://www.wanikani.com/*"],
      "js": ["content.js"],
      "css": ["tooltip.css"],
      "run_at": "document_idle"
    }
  ]
}
